# Set the default behavior.
* text=auto

# set the specific behavior
*.txt text
*.rst text
*.sh text eol=lf
*.sh.in text eol=lf
*.bat text eol=crlf
*.bat.in text eol=crlf
*.diff text eol=lf
*.cpp text diff=cpp
*.h text diff=cpp
*.c text diff=cpp
*.hxx text diff=cpp
*.txx text diff=cpp
*.cxx text diff=cpp
*.cc text diff=cpp
*.in text
*.desktop eol=lf
*.dox eol=lf
*.html text diff=html
*.css text diff=css
*.cmake text
*.py text diff=python
*.pl text
*.md text
*.profile eol=lf
*.cmd eol=crlf
*.opt eol=crlf
*.opt.in eol=crlf
*.tex text diff=tex
*.tex.in text diff=tex
*.sty text
*.cls text
*.bib text
*.supp eol=lf

