  DOWNLOAD_DIR ${DOWNLOAD_LOCATION}
  DEPENDS ${MVD_DEPENDENCIES}
  CMAKE_CACHE_ARGS ${SB_CMAKE_CACHE_ARGS}
  -DMonteverdi_INSTALL_LIB_DIR:STRING=lib
  -DOTB_DATA_ROOT:STRING=${OTB_DATA_ROOT}
