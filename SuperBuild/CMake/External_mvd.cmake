if( __EXTERNAL_MVD__)
  return()
else()
  set(__EXTERNAL_MVD__ 1)
endif()

SETUP_SUPERBUILD(PROJECT MVD)

# declare dependencies
ADDTO_DEPENDENCIES_IF_NOT_SYSTEM(MVD OTB QWT QT4)

set(MVD_SB_CONFIG)
ADD_SUPERBUILD_CMAKE_VAR(MVD OTB_DIR)
