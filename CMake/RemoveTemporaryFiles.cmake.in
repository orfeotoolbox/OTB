#
# Remove temporary files that are generated by build submissions,
# cmake configure and testing
#
# Cleanup old dashboard submissions
file(GLOB OLD_DASHBOARDS "@OTB_BINARY_DIR@/Testing/20*")
foreach(OLD ${OLD_DASHBOARDS})
  message(" Removing old submission in ${OLD}")
  file(REMOVE_RECURSE "${OLD}")
endforeach()

# Cleanup the Testing/Temporary directory
file(REMOVE_RECURSE "@OTB_BINARY_DIR@/Testing/Temporary")

# Cleanup the CMake Error and Output logs
file(REMOVE "@OTB_BINARY_DIR@${CMAKE_FILES_DIRECTORY}${CMAKE_FILES_DIRECTORY}/CMakeOutput.log")
file(REMOVE "@OTB_BINARY_DIR@${CMAKE_FILES_DIRECTORY}/CMakeOutput.log")
file(REMOVE "@OTB_BINARY_DIR@/CMakeOutput.log")

file(REMOVE "@OTB_BINARY_DIR@${CMAKE_FILES_DIRECTORY}${CMAKE_FILES_DIRECTORY}/CMakeError.log")
file(REMOVE "@OTB_BINARY_DIR@${CMAKE_FILES_DIRECTORY}/CMakeError.log")
file(REMOVE "@OTB_BINARY_DIR@/CMakeError.log")
